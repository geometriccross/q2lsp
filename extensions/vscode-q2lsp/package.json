{
  "name": "qiime-language-server",
  "displayName": "vscode-q2lsp",
  "description": "The language server for qiime",
  "version": "0.2.0-beta.5",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:shellscript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "q2lsp.restartServer",
        "title": "Restart q2lsp Server",
        "category": "q2lsp"
      },
      {
        "command": "q2lsp.showServerLog",
        "title": "Show q2lsp Server Log",
        "category": "q2lsp"
      },
      {
        "command": "q2lsp.diagnoseEnvironment",
        "title": "Setup / Diagnose Environment",
        "category": "q2lsp"
      }
    ],
    "configuration": {
      "title": "q2lsp",
      "type": "object",
      "properties": {
        "q2lsp.interpreterPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the Python interpreter to launch q2lsp. This setting has the highest priority.",
          "scope": "resource"
        },
        "q2lsp.serverEnv": {
          "type": "object",
          "default": {},
          "description": "Environment variable overrides for the q2lsp server (map of string to string). Changing this setting restarts the q2lsp server.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
